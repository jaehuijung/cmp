<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sl.qr.mh.service.user.userMapper">

    <select id="getAllUserList" parameterType="map" resultType="map">
        SELECT
            idx,
            id,
            name,
            email,
            phone,
            position,
            group_idx,
            created_at,
            updated_at,
            is_deleted
        FROM
            user
        WHERE
            is_deleted = 'N'
    </select>

    <select id="getAllUserListCnt" parameterType="map" resultType="int">
        SELECT
            count(idx)
        FROM
            user
        WHERE
            is_deleted = 'N'
    </select>
</mapper>